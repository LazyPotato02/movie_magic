<section id="search">
    <h1>Search</h1>
    <form method="GET" class="form">
        <input type="text" class="search" name="search" placeholder="Title...">
        <input type="text" name="genre" class="genre" placeholder="Genre...">
        <input type="number" name="year" class="year" placeholder="Year...">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
<div class="band">
{{#if movies}}
    {{#each movies}}
            <div class="flip flip-vertical">
                <div class="front">
                    <img src="{{this.imageURL}}"
                         alt="{{this.title}}">
                </div>
                <div class="back">
                    <h1>{{this.title}}</h1>
                    <h2>Genre: {{this.genre}}</h2>
                    <p>Description: {{this.description}}
                    </p>
                    <a href="/details/{{this.id}}" class="details">Details</a>
                </div>
            </div>
    {{/each}}
{{else}}
    <div class="no-posts">
        <p class="no-offer">There are no movies matched...</p>
    </div>
{{/if}}
